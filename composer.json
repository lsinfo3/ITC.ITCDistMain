{
    "name": "itc/itcdistribution",
    "description": "Distribution for ITC Website",
    "license": "GPL-3.0+",
    "config": {
        "vendor-dir": "Packages/Libraries",
        "bin-dir": "bin"
    },
    "repositories": [{
        "type": "vcs",
        "url": "git@github.com:lsinfo3/ITC.ITeleTraffic.Main.git",
        "options": {
          "ssh2": {
            "pubkey_file": "~/.ssh/itc_deploy_key.pub",
            "privkey_file": "~/.ssh/itc_deploy_key"
          }
        }
    }],
    "require": {
        "typo3/neos": "~2.0.0",
        "typo3/neos-nodetypes": "~2.0.0",
        "typo3/neosdemotypo3org": "~2.0.0",
        "typo3/neos-kickstarter": "~2.0.0",
        "typo3/typo3cr": "~2.0.0",
        "typo3/typoscript": "~2.0.0",
        "typo3/media": "~2.0.0",
        "typo3/fluid": "~3.0.0",
        "typo3/eel": "~3.0.0",
        "typo3/party": "~3.0.0",
        "typo3/kickstart": "~3.0.0",
        "lelesys/news": "2.0.x-dev",
        "itc/iteletrafficmain": "dev-master",
        "typo3/neos-seo": "~1.0.0",
        "typo3/neos-googleanalytics": "~1.0.0",
	"robertlemke/plugin-blog": "~1.0.0"
    },
    "require-dev": {
        "typo3/buildessentials": "2.3.*",
        "mikey179/vfsstream": "1.4.*",
        "phpunit/phpunit": "4.3.*",
        "flowpack/behat": "dev-master"
    },
    "suggest": {
        "ext-pdo_sqlite": "For running functional tests out-of-the-box this is required"
    },
    "scripts": {
        "post-update-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-install-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-package-update": "TYPO3\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall",
        "post-package-install": "TYPO3\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall"
    }
}
